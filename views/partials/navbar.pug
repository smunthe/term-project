//- navar.pug 
header.top-nav
  button.menu-btn(onclick="toggleMenu()") ☰

  .logo
    a(href="/")
      img(src="/assets/logo1.png", alt="logo")

  .icons
    .search-container
      button#searchToggle(type="button", aria-label="Toggle Search") 🔍

      form#searchForm(method="GET", action="/search", style="display: none; flex-direction: column; position: absolute; right: 50px; background: white; padding: 10px; border-radius: 8px; z-index: 1000; box-shadow: 0 2px 8px rgba(0,0,0,0.1); min-width: 250px;")
        .search-wrapper(style="position: relative; width: 100%;")
          input#searchInput(type="text", name="q", placeholder="Search dreams...", required)
          ul#searchSuggestions

      a(href="/shopingcart", aria-label="Shopping Cart") 🛒

  nav#menu.dropdown-menu(style="display: none;")
    a(href="/") 🏠 Go to Home
    a(href="/") 🛍️ Products
    a(href="/about") 🤔 About 

    if user
      a(href="/profile") 👤 Profile
      a(href="/settings") ⚙️ Settings
      a(href="/logout") 🚪 Log Out
    else
      a(href="/login") 🔑 Log In
      a(href="/register") 📝 Register

script.
  function toggleMenu() {
    const menu = document.getElementById("menu");
    menu.style.display = menu.style.display === "block" ? "none" : "block";
  }

  document.addEventListener("DOMContentLoaded", () => {
    const toggle = document.getElementById("searchToggle");
    const form = document.getElementById("searchForm");
    toggle.addEventListener("click", () => {
      form.style.display = form.style.display === "none" ? "flex" : "none";
      form.querySelector("input").focus();
    });
  });
