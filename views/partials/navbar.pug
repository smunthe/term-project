header.top-nav
  button.menu-btn(onclick="toggleMenu()") ☰

  .logo
    a(href="/")
      img(src="/assets/logo1.png", alt="logo")

  .icons
    button(onclick="location.href='/search.html'") 🔍
    button(onclick="location.href='/shopingcart'") 🛒

  nav#menu.dropdown-menu(style="display: none;")
    a(href="/") 🏠 Go to Home
    a(href="/") 🛍️ Products

    if user
      a(href="/profile") 👤 Profile
      a(href="/settings") ⚙️ Settings
      a(href="/logout") 🚪 Log Out
    else
      a(href="/login") 🔑 Log In
      a(href="/register") 📝 Register

script.
  function toggleMenu() {
    const menu = document.getElementById("menu");
    menu.style.display = menu.style.display === "block" ? "none" : "block";
  }
