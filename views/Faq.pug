extends layout

block content
  .container.mt-5
    h1.mb-4 Frequently Asked Questions

    #faqAccordion.accordion
      each faq, index in [
        { question: 'What is your return policy?', answer: 'You cant return dreams therefore no returns are accepted' },
        { question: 'Do you offer international shipping?', answer: 'Yes, they are dreams so as long as you are asleep or your enemy.' },
        { question: 'How can I contact customer support?', answer: 'Meditate under the sun with a top hat' }
      ]
        .accordion-item
          h2.accordion-header(id=`heading${index}`)
            button.accordion-button.collapsed(type="button", data-bs-toggle="collapse", data-bs-target=`#collapse${index}`, aria-expanded="false", aria-controls=`collapse${index}`)
              = faq.question
          .accordion-collapse.collapse(id=`collapse${index}`, aria-labelledby=`heading${index}`, data-bs-parent="#faqAccordion")
            .accordion-body
              = faq.answer
