extends layout
block styles
  link(rel="stylesheet", href="/profile.css")

block content
  .profile-container
    section.profile-header
      img#profilePic.profile-pic(src="", alt="Profile Picture")
      .profile-info
        h2#profileName
        p#profileEmail
        a.settings-link(href="/settings") ‚öôÔ∏è Change Info

    section.personal-info
      h3 Personal Information
      p#profileAddress
      p#profilePayment

    section.recent-orders
      h3 Recently Purchased
      if orders.length
        ul#orderList
          each item in orders
            li.order-item
              img(src=item.image, alt=item.name, width="50")
              span #{item.name} √ó #{item.quantity} ‚Äî $#{item.price}
      else
        p No recent purchases yet.
      a.view-all(href="/orders") üåô View All Dream Orders

    section.favorites
      h3 Favorites
      #favoritesGrid.favorites-grid

    script(src="/profileScript.js")