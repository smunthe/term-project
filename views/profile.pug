extends layout
block styles
  link(rel="stylesheet", href="/profile.css")

block content
  .profile-container
    section.profile-header
      img#profilePic.profile-pic(src="", alt="Profile Picture")
      .profile-info
        h2#profileName
        p#profileEmail
        a.settings-link(href="/settings") ‚öôÔ∏è Change Info

    section.personal-info
      h3 Personal Information
      p#profileAddress
      p#profilePayment

    section.recent-orders
      h3 üåà Recently Purchased
      #orderList
      if !orders.length
        p No recent purchases yet.
      a.view-all(href="/orders") üåô View All Dream Orders

    section.favorites
      h3 Favorites
      #favoritesGrid.favorites-grid
        if favoriteProducts.length
          each product in favoriteProducts
            .favorite-item
              img(src=product.image, alt=product.name)
              p= product.name

              // Add to Cart form
              form(method="POST", action="/shopingcart/add")
                input(type="hidden", name="productId", value=product.id)
                input(type="hidden", name="quantity", value=1)
                button(type="submit") üõí Add to Cart

              // Remove from Wishlist form
              form(method="POST", action="/favorites/toggle")
                input(type="hidden", name="productId", value=product.id)
                button(type="submit") ‚ùå Remove
        else
          p You haven't favorited anything yet.

    script(src="/profileScript.js")